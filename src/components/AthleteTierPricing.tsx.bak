import { Trophy, DollarSign, TrendingUp, Users, Target, Package } from 'lucide-react';
import { getJABARosterTeams } from '../data/jabaRealData';
import {
  calculateTierBreakdown,
  AthleteTier,
  formatCurrency,
  formatPercentage,
  formatNumber,
} from '../services/jabaDataLoader';

/**
 * SECTION 2: ATHLETE TIER PRICING BLUEPRINT
 *
 * Position: After Money Left on Table
 * Purpose: Sales enablement - clear pricing structure for athlete partnerships
 * Data: Real JABA metrics with tier classification algorithm
 */

export function AthleteTierPricing() {
  const teams = getJABARosterTeams();
  const tierBreakdown = calculateTierBreakdown(teams);

  // Calculate totals
  const totalAthletes = tierBreakdown.reduce((sum, tier) => sum + tier.count, 0);
  const totalEMV = tierBreakdown.reduce((sum, tier) => sum + tier.totalEMV, 0);

  // Tier colors
  const getTierColor = (tier: AthleteTier) => {
    const colors = {
      [AthleteTier.TIER_1_TOP_GUN]: {
        bg: 'bg-gradient-to-br from-[#1770C0] to-indigo-600',
        border: 'border-purple-600',
        lightBg: 'bg-purple-50',
        text: 'text-purple-900',
        accent: 'text-purple-600',
      },
      [AthleteTier.TIER_2_RISING_STAR]: {
        bg: 'bg-gradient-to-br from-[#1770C0] to-[#0D5A9F]',
        border: 'border-[#1770C0]',
        lightBg: 'bg-[#1770C0]/10',
        text: 'text-black',
        accent: 'text-[#1770C0]',
      },
      [AthleteTier.TIER_3_EMERGING]: {
        bg: 'bg-gradient-to-br from-green-500 to-emerald-600',
        border: 'border-green-600',
        lightBg: 'bg-green-50',
        text: 'text-green-900',
        accent: 'text-green-600',
      },
      [AthleteTier.TIER_4_GROWTH]: {
        bg: 'bg-gradient-to-br from-gray-500 to-slate-600',
        border: 'border-gray-600',
        lightBg: 'bg-gray-50',
        text: 'text-white',
        accent: 'text-gray-400',
      },
    };
    return colors[tier];
  };

  return (
    <div className="bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-8 shadow-sm">
      {/* Header */}
      <div className="mb-8">
        <div className="flex items-center gap-3 mb-3">
          <div className="w-12 h-12 rounded-lg bg-[#1770C0] flex items-center justify-center">
            <DollarSign className="w-7 h-7 text-white" />
          </div>
          <div>
            <h2 className="text-3xl font-bold text-white tracking-wide">
              ATHLETE TIER PRICING BLUEPRINT
            </h2>
            <p className="text-gray-400 font-semibold text-sm">Sales-ready pricing structure for every athlete</p>
          </div>
        </div>
        <div className="h-1.5 w-32 bg-[#1770C0]" />
      </div>

      {/* Overview Stats */}
      <div className="mb-8 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-6 border border-white/20">
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div className="text-center">
            <div className="text-4xl font-bold text-[#1770C0] mb-1">{totalAthletes}</div>
            <div className="text-sm text-gray-300">Total Athletes Classified</div>
          </div>
          <div className="text-center">
            <div className="text-4xl font-bold text-[#1770C0] mb-1">{formatCurrency(totalEMV)}</div>
            <div className="text-sm text-gray-300">Total 90-Day EMV</div>
          </div>
          <div className="text-center">
            <div className="text-4xl font-bold text-[#1770C0] mb-1">4</div>
            <div className="text-sm text-gray-300">Pricing Tiers</div>
          </div>
        </div>
      </div>

      {/* Tier Cards */}
      <div className="space-y-6 mb-8">
        {tierBreakdown.map((tier) => {
          const colors = getTierColor(tier.tier);
          const percentOfNetwork = totalAthletes > 0 ? (tier.count / totalAthletes) * 100 : 0;

          return (
            <div
              key={tier.tier}
              className={`rounded-xl overflow-hidden border-2 ${colors.border} shadow-lg`}
            >
              {/* Tier Header */}
              <div className={`${colors.bg} text-white p-6`}>
                <div className="flex items-start justify-between">
                  <div className="flex-1">
                    <div className="flex items-center gap-3 mb-2">
                      <Trophy className="w-6 h-6" />
                      <h3 className="text-2xl font-bold">{tier.tierInfo.name}</h3>
                    </div>
                    <p className="text-sm opacity-90 mb-4">{tier.tierInfo.description}</p>
                    <div className="flex items-center gap-6 text-sm">
                      <div>
                        <span className="opacity-75">Criteria: </span>
                        <span className="font-semibold">{tier.tierInfo.criteria}</span>
                      </div>
                    </div>
                  </div>
                  <div className="text-right">
                    <div className="text-4xl font-bold mb-1">{tier.count}</div>
                    <div className="text-sm opacity-90">Athletes</div>
                    <div className="text-xs opacity-75 mt-1">{percentOfNetwork.toFixed(1)}% of network</div>
                  </div>
                </div>
              </div>

              {/* Tier Content */}
              <div className={`${colors.lightBg} p-6`}>
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                  {/* Price Range */}
                  <div className="bg-white rounded-lg p-4 border-2 border-gray-200">
                    <div className="flex items-center gap-2 mb-2">
                      <DollarSign className={`w-4 h-4 ${colors.accent}`} />
                      <div className="text-xs text-gray-400">Price Per Post</div>
                    </div>
                    <div className={`text-xl font-bold ${colors.text}`}>
                      {formatCurrency(tier.tierInfo.priceRangeMin)} - {formatCurrency(tier.tierInfo.priceRangeMax)}
                    </div>
                  </div>

                  {/* Avg Engagement */}
                  <div className="bg-white rounded-lg p-4 border-2 border-gray-200">
                    <div className="flex items-center gap-2 mb-2">
                      <TrendingUp className={`w-4 h-4 ${colors.accent}`} />
                      <div className="text-xs text-gray-400">Avg Engagement</div>
                    </div>
                    <div className={`text-xl font-bold ${colors.text}`}>
                      {formatPercentage(tier.avgEngagementRate)}
                    </div>
                  </div>

                  {/* Avg Followers */}
                  <div className="bg-white rounded-lg p-4 border-2 border-gray-200">
                    <div className="flex items-center gap-2 mb-2">
                      <Users className={`w-4 h-4 ${colors.accent}`} />
                      <div className="text-xs text-gray-400">Avg Followers</div>
                    </div>
                    <div className={`text-xl font-bold ${colors.text}`}>
                      {formatNumber(Math.round(tier.avgFollowers))}
                    </div>
                  </div>

                  {/* Total EMV */}
                  <div className="bg-white rounded-lg p-4 border-2 border-gray-200">
                    <div className="flex items-center gap-2 mb-2">
                      <Target className={`w-4 h-4 ${colors.accent}`} />
                      <div className="text-xs text-gray-400">Total 90-Day EMV</div>
                    </div>
                    <div className={`text-xl font-bold ${colors.text}`}>
                      {formatCurrency(tier.totalEMV)}
                    </div>
                  </div>
                </div>

                {/* Sample Athletes */}
                {tier.sampleAthletes.length > 0 && (
                  <div>
                    <h4 className={`text-sm font-bold ${colors.text} mb-3`}>Top Performers in This Tier:</h4>
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-3">
                      {tier.sampleAthletes.map((athlete, idx) => (
                        <div key={idx} className="bg-white rounded-lg p-4 border border-gray-200">
                          <div className="font-bold text-white text-sm mb-1">{athlete.schoolName}</div>
                          <div className="text-xs text-gray-400 mb-2">{athlete.sport}</div>
                          <div className="space-y-1 text-xs">
                            <div className="flex items-center justify-between">
                              <span className="text-gray-400">Followers:</span>
                              <span className="font-semibold text-white">{formatNumber(athlete.followers)}</span>
                            </div>
                            <div className="flex items-center justify-between">
                              <span className="text-gray-400">Engagement:</span>
                              <span className="font-semibold text-white">{formatPercentage(athlete.engagementRate)}</span>
                            </div>
                            <div className="flex items-center justify-between">
                              <span className="text-gray-400">EMV:</span>
                              <span className={`font-semibold ${colors.accent}`}>{formatCurrency(athlete.emv)}</span>
                            </div>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          );
        })}
      </div>

      {/* Bundle Pricing Recommendations */}
      <div className="bg-gradient-to-r from-[#1770C0] to-[#1770C0] rounded-xl p-8 text-white mb-8">
        <div className="flex items-start gap-4 mb-6">
          <div className="w-12 h-12 rounded-lg bg-white/20 flex items-center justify-center flex-shrink-0">
            <Package className="w-7 h-7" />
          </div>
          <div>
            <h3 className="text-2xl font-bold mb-3">Recommended Bundle Pricing</h3>
            <p className="text-blue-100 mb-4">Maximize value with multi-school and multi-athlete packages</p>
          </div>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div className="bg-white/10 rounded-lg p-5 backdrop-blur-sm border border-white/20">
            <div className="text-sm font-semibold mb-2 opacity-90">3-School Package</div>
            <div className="text-3xl font-bold mb-2">15% OFF</div>
            <div className="text-sm opacity-75">Brand reaches 3 regional markets</div>
            <div className="mt-3 pt-3 border-t border-white/20 text-xs">
              Recommended for: Regional brands (Wegmans, Sheetz)
            </div>
          </div>

          <div className="bg-white/10 rounded-lg p-5 backdrop-blur-sm border border-white/20">
            <div className="text-sm font-semibold mb-2 opacity-90">5-School Package</div>
            <div className="text-3xl font-bold mb-2">25% OFF</div>
            <div className="text-sm opacity-75">National campaign reach</div>
            <div className="mt-3 pt-3 border-t border-white/20 text-xs">
              Recommended for: National brands (Nike, Gatorade)
            </div>
          </div>

          <div className="bg-white/10 rounded-lg p-5 backdrop-blur-sm border border-white/20">
            <div className="text-sm font-semibold mb-2 opacity-90">Conference Package</div>
            <div className="text-3xl font-bold mb-2">30% OFF</div>
            <div className="text-sm opacity-75">Entire conference saturation</div>
            <div className="mt-3 pt-3 border-t border-white/20 text-xs">
              Recommended for: SEC/Big Ten focused brands
            </div>
          </div>
        </div>
      </div>

      {/* The Bottom Line */}
      <div className="bg-black/80 rounded-xl p-8 text-white border border-white/20">
        <div className="flex items-start gap-4">
          <div className="w-12 h-12 rounded-lg bg-[#1770C0] flex items-center justify-center flex-shrink-0">
            <Target className="w-7 h-7" />
          </div>
          <div>
            <h3 className="text-2xl font-bold mb-4">The Bottom Line</h3>
            <div className="text-lg space-y-3">
              <p>
                You have <span className="font-bold text-[#1770C0]">{tierBreakdown[0]?.count || 0} Tier 1 athletes</span> commanding{' '}
                <span className="font-bold text-[#1770C0]">{formatCurrency(tierBreakdown[0]?.tierInfo.priceRangeMin || 0)}-{formatCurrency(tierBreakdown[0]?.tierInfo.priceRangeMax || 0)} per post</span>.
              </p>
              <p>
                Your <span className="font-bold text-[#1770C0]">{tierBreakdown[1]?.count || 0} Tier 2 athletes</span> are perfect for mid-market brands at{' '}
                <span className="font-bold text-[#1770C0]">{formatCurrency(tierBreakdown[1]?.tierInfo.priceRangeMin || 0)}-{formatCurrency(tierBreakdown[1]?.tierInfo.priceRangeMax || 0)} per post</span>.
              </p>
              <p className="text-gray-300">
                Every athlete is priced based on <span className="font-semibold">real engagement data</span>, not gut feel. This is your competitive advantage.
              </p>
            </div>
          </div>
        </div>
      </div>

      {/* Data Attribution */}
      <div className="mt-6 text-xs text-gray-400 text-center">
        Data source: JABA PlayFlyFull_roster_teams.json (177 teams) | Pricing algorithm: engagement_rate × followers × $0.015 CPE
      </div>
    </div>
  );
}
